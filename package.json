{
  "name": "stable-bridge",
  "version": "1.0.0",
  "main": "build",
  "scripts": {
    "build": "hardhat compile",
    "export-abi": "hardhat export-abi",
    "test": "hardhat test",
    "test-with-gas-usage": "NODE_GAS=true hardhat test",
    "test-fuzzy": "hardhat test test-fuzzy/pool.test.ts test-fuzzy/pool-balance.test.ts",
    "test-foundry": "forge test",
    "test-foundry:full": "forge test -vvvvv",
    "format": "npx prettier 'contracts/**/*.sol' 'hardhat.config.ts' 'test/**/*.ts' --write",
    "format:check": "npx prettier 'contracts/**/*.sol' 'hardhat.config.ts' 'test/**/*.ts' --check",
    "lint": "eslint \"test/**/*.ts\" --fix && solhint --fix 'contracts/**/*.sol'",
    "lint:check": "eslint \"test/**/*.ts\" && solhint 'contracts/**/*.sol'",
    "slither:all": "npm run slither:install && source ./venv/bin/activate && slither --config-file ./slither.config.json .",
    "slither:docker": "docker run -t -v .:/home/ethsec/evm trailofbits/eth-security-toolbox -c \"slither --config-file /home/ethsec/evm/slither.config.json /home/ethsec/evm\"",
    "python-env:install": "test -n \"$VIRTUAL_ENV\" || test -f ./venv/bin/activate || python3 -m venv venv",
    "slither:install": "npm run python-env:install && source ./venv/bin/activate && (command -v slither || pip3 install slither-analyzer)",
    "spell:check": "cspell \"{*.md,.github/*.md,contracts/**/*.sol,scripts/**/*.ts}\""
  },
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.5.0",
    "@openzeppelin/contracts": "4.9.6",
    "@types/big.js": "^6.1.6",
    "base32.js": "^0.1.0",
    "big.js": "^6.2.1",
    "bs58": "^5.0.0",
    "tronweb": "^5.1.0",
    "web3": "^1.10.4"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.5",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.16.3",
    "@types/numeral": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chai": "^4.3.10",
    "cspell": "^7.3.6",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eth-lib": "^0.1.29",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2",
    "generatorics": "^1.1.0",
    "hardhat": "^2.19.5",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-ignore-warnings": "^0.2.12",
    "numeral": "^2.0.6",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "table": "^6.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^5.2.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=12"
  },
  "packageManager": "pnpm@10.7.0",
  "pnpm": {
    "overrides": {
      "yargs-parser@<=5.0.0": ">=5.0.1",
      "got@<11.8.5": ">=11.8.5",
      "flat@<5.0.1": ">=5.0.1",
      "underscore@>=1.3.2 <1.12.1": ">=1.12.1",
      "node-fetch@<2.6.1": ">=2.6.1",
      "lodash@<4.17.21": ">=4.17.21",
      "async@>=2.0.0 <2.6.4": ">=2.6.4",
      "tough-cookie@<4.1.3": ">=4.1.3",
      "minimatch@<3.0.5": ">=3.0.5",
      "protobufjs@>=7.0.0 <7.2.4": ">=7.2.4",
      "word-wrap@<1.2.4": ">=1.2.4",
      "json5@<1.0.2": ">=1.0.2",
      "node-fetch@<2.6.7": ">=2.6.7",
      "debug@>=3.2.0 <3.2.7": ">=3.2.7",
      "undici@<5.26.2": ">=5.26.2",
      "browserify-sign@>=2.6.0 <=4.2.1": ">=4.2.2",
      "semver@<5.7.2": ">=5.7.2",
      "axios@>=0.8.1 <1.6.0": ">=1.6.0"
    }
  }
}
