{
  "name": "stable-bridge",
  "version": "1.0.0",
  "main": "build",
  "scripts": {
    "build": "hardhat compile",
    "export-abi": "hardhat export-abi",
    "test": "hardhat test",
    "test-with-gas-usage": "NODE_GAS=true hardhat test",
    "test-fuzzy": "hardhat test test-fuzzy/pool.test.ts test-fuzzy/pool-balance.test.ts",
    "test-foundry": "forge test",
    "test-foundry:full": "forge test -vvvvv",
    "slither:all": "npm run slither:install && source ./venv/bin/activate && slither --config-file ./slither.config.json .",
    "slither:docker": "docker run -t -v .:/home/ethsec/evm trailofbits/eth-security-toolbox -c \"slither --config-file /home/ethsec/evm/slither.config.json /home/ethsec/evm\"",
    "solidity-lint": "solhint --fix 'contracts/**/*.sol'",
    "lint": "eslint \"test/**/*.ts\" --fix",
    "prettier": "npx prettier --write 'contracts/**/*.sol' 'hardhat.config.ts' 'test/**/*.ts'",
    "python-env:install": "test -n \"$VIRTUAL_ENV\" || test -f ./venv/bin/activate || python3 -m venv venv",
    "slither:install": "npm run python-env:install && source ./venv/bin/activate && (command -v slither || pip3 install slither-analyzer)"
  },
  "dependencies": {
    "@certusone/wormhole-sdk": "^0.5.0",
    "@types/big.js": "^6.1.6",
    "big.js": "^6.2.1",
    "bs58": "^5.0.0",
    "tronweb": "^5.1.0",
    "web3": "^1.9.0"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.3.4",
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-waffle": "^2.0.5",
    "@openzeppelin/contracts": "^4.9.3",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.16.3",
    "@types/numeral": "^2.0.2",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eth-lib": "^0.1.29",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.7.2",
    "generatorics": "^1.1.0",
    "hardhat": "^2.14.0",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-ignore-warnings": "^0.2.8",
    "numeral": "^2.0.6",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.4.1",
    "solidity-coverage": "^0.8.2",
    "table": "^6.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^5.2.0",
    "typescript": "^5.0.4"
  }
}
